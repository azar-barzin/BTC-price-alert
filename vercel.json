{
    "version": 3,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "env": {
        "BINANCE_WALLET_ADDRESS": "@binance_wallet_address",
        "BINANCE_API_KEY": "@binance_api_key",
        "BINANCE_API_SECRET": "@binance_api_secret"
    },
    "functions": {
        "api/**/*.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}